  "accounts": [
    {
      "name": "Bond",
      "type": {
        "kind": "struct",
        "fields": [
          {"name": "bondId", "type": "string"},
          {"name": "principal", "type": "publicKey"},
          {"name": "agent", "type": "publicKey"},
          {"name": "taskDescription", "type": "string"},
          {"name": "collateralAmount", "type": "u64"},
          {"name": "deadline", "type": "i64"},
          {"name": "status", "type": {"defined": "BondStatus"}},
          {"name": "createdAt", "type": "i64"},
          {"name": "completedAt", "type": "i64"},
          {"name": "verificationVotes", "type": {"vec": {"defined": "VerificationVote"}}},
